@model EntityLayer.Concrete.Blogger

@{
    ViewData["Title"] = "BloggerEditProfile";
    Layout = "~/Views/Shared/BloggerLayout.cshtml";
}

@using(Html.BeginForm("BloggerEditProfile", "Blogger", FormMethod.Post))
{
       <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                    <br/>
                    @Html.HiddenFor(x=>x.BloggerID,new {@class="form-control"})
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Yazar Adı Soyadı</label>
                        @Html.TextBoxFor(x=>x.BloggerName,new {@class="form-control"})
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
        @Html.TextBoxFor(x=>x.BloggerMail,new {@class="form-control"})

                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
         @Html.PasswordFor(x=>x.BloggerPassword,new {@class="form-control"})

                      </div>
                     @* <div class="form-group">
                        <label for="exampleSelectGender">Cinsiyet</label>
                        <select class="form-control" id="exampleSelectGender">
                          <option>Erkek</option>
                          <option>Kadın</option>
                        </select>
                      </div>*@
                      <div class="form-group">
                        <label>Yazar Görsel</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                          <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                          <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                          </span>
                        </div>
                      </div>
               @*       <div class="form-group">
                        <label for="exampleInputCity1">Yazar Statüsü</label>
             @Html.TextBoxFor(x=>x.BloggerStatus,new {@class="form-control"})

                      </div>*@
                      <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x=>x.BloggerAbout,10,3,new {@class="form-control"})

                      </div>
                      <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                      <button class="btn btn-light">İptal Et</button>
                    </form>
                  </div>
                </div>
              </div>
}