@model EntityLayer.Concrete.Blogger
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>


<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Blogger Kayıt Alanı</h3>
				<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using(Html.BeginForm("Index","Register",FormMethod.Post)) {
						<div class="form-row">
								<div class="col-md-6 mb-3">
										<label for="validationCustom01">Adınız Soyadınız</label>

										@Html.TextBoxFor(x=>x.BloggerName, new {@class="form-control"})
										@Html.ValidationMessageFor(x=>x.BloggerName ,"", new {@class="text-danger"})

									@*<input type="text" class="form-control" id="validationDefault01" name="BloggerName" placeholder="" required="">*@
								</div>
								<div class="col-md-6 mb-3">
										<label for="validationCustom02">Mail Adresi</label>
										@Html.TextBoxFor(x=>x.BloggerMail, new {@class="form-control"})
										@Html.ValidationMessageFor(x=>x.BloggerMail ,"", new {@class="text-danger"})
									@*<input type="email" class="form-control" name="BloggerName" id="validationDefault02" placeholder="" required="">*@
								</div>
							</div>
							<div class="form-row">
								<div class="form-group col-md-6">
										<label for="exampleInputPassword1 mb-2">Şifreniz</label>
										@Html.TextBoxFor(x=>x.BloggerPassword, new {@class="form-control"})
										@Html.ValidationMessageFor(x=>x.BloggerPassword ,"", new {@class="text-danger"})
									@*<input type="password" class="form-control" name="BloggerPassword" id="password1" placeholder="" required="">*@
								</div>
								<div class="form-group col-md-6">
										<label for="exampleInputPassword2 mb-2">Görsel Dosya</label>
										@Html.TextBoxFor(x=>x.BloggerImage, new {@class="form-control"})
										@Html.ValidationMessageFor(x=>x.BloggerImage ,"", new {@class="text-danger"})
										@*<input type="text" class="form-control" name="BloggerImage" id="password2" placeholder="" required="">*@
									</div>
								
							</div>
							<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
								<p>
									<a href="#" id="btn1">Tüm şartları okudum ve kabul ediyorum</a>
								</p>
						}
		
					</div>
			</div>
		</div>
		<br />
		
		<script>
			$('#btn1').click(function (){
				swal("Kullanım şartları", "Sitemize verdiğiniz mail adresi üzerinden bilgi ve haber e-postalarını spam ölçüsüne varmadan gönderilmeye devam edilecektir.Eğer e-psota bülteninden çıkmak isterseniz mail ileti dizisini durdurabilirsiniz , şifre ve mail adresleriniz şifrelenmiş formatta saklanır..");

			});
		</script>
	</section>